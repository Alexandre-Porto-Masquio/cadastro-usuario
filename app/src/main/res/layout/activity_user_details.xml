            app:layout_constraintTop_toBottomOf="@id/cityDetailUser" />

        <TextView
            android:id="@+id/neighborhoodDetailUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/montserrat_bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#1D3731"
            app:layout_constraintHorizontal_bias="0"
            android:text="@string/bairro"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/neighborhoodFixedDetailUser"
